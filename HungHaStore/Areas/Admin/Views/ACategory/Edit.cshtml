@model HungHaStore.Models.loai_sp

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <b>SỬA THÔNG TIN LOẠI SẢN PHẨM</b>
        <a href="@Url.Action("Index")" class="btn btn-info pull-right">< Quay lại</a>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)

                <div class="form-group">
                    <label class="control-label col-md-2" for="ten">Tên</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ten, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ten, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="ten">Mô tả</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.mo_ta, new { @class = "form-control", @cols = 80, @rows = 10 })
                        @Html.ValidationMessageFor(model => model.mo_ta, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>



