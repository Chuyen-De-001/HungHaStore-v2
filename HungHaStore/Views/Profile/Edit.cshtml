@model HungHaStore.Models.nguoi_dung

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <h5 class="card-header">THÔNG TIN NGƯỜI DÙNG <a href="@Url.Action("Index","Home")" class="btn btn-info pull-right">< Quay lại</a></h5>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)

                <div class="form-group">
                    <label class="control-label col-md-2" for="tai_khoan">Tài khoản</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.tai_khoan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.tai_khoan, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" for="tai_khoan">Email</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="tai_khoan">Họ tên</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ho_ten, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dia_chi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="tai_khoan">Ngày sinh</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ngay_sinh, new { htmlAttributes = new { @class = "form-control oso", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.ngay_sinh, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="tai_khoan">SĐT</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.sdt, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.sdt, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="tai_khoan">Địa chỉ</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.dia_chi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dia_chi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="tai_khoan">Giới tính</label>
                    <div class="col-md-10">
                        @Html.DropDownList("gioi_tinh", new List<SelectListItem>
                        {
                        new SelectListItem {Text = "Nam", Value = "0"},
                        new SelectListItem {Text = "Nữ", Value = "1"},
                        }, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.gioi_tinh, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-success" />
                    </div>
                </div>
            </div>
            }
        </div>
    </div>


</div>
