@using HungHaStore.Models;
@using HungHaStore.Helper;
@{ 
    var currency = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    ViewBag.Title = "Trang chủ";
    List<san_pham> sanPhamNoiBat = ViewBag.sanPhamNoiBat; //nhận dữ liệu của sản phẩm từ controller.
    List<loai_sp> loaiSanPham = ViewBag.loaiSanPham; //nhận dữ liệu của loại sản phẩm từ controller.
    List<san_pham> sanPhamMoiNhat = ViewBag.sanPhamMoiNhat;
    List<san_pham> sanPhamXemNhieu = ViewBag.sanPhamXemNhieu;
    List<san_pham> sanPhamGiamGia = ViewBag.sanPhamGiamGia;
}
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Nổi bật</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter" id="MixItUp866079">
            @foreach (san_pham sanPham in sanPhamNoiBat)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-id="@sanPham.id">
                            @if (sanPham.giam_gia > 0)
                            {
                                <span class="badge badge-pill badge-danger" style="position:absolute">SALE</span>
                            }
                            <img src="/Assest/img/product/@sanPham.hinh_anh" alt="@sanPham.ten" />
                            <ul class="featured__item__pic__hover">
                                <li><a href="javascript:void(0)"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="javascript:void(0)" class="add-to-cart"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="@Url.Action("Detail", "Product",new {id=sanPham.id})">@sanPham.ten</a></h6>
                            @if (sanPham.giam_gia > 0)
                            {
                                <h4 style="text-decoration:line-through;font-size:80%">@String.Format(currency, "{0:c0}", sanPham.gia_tien)</h4>
                                <h4 class="text-danger font-weight-bold">@String.Format(currency, "{0:c0}", CalculatorHelper.priceSale(sanPham.giam_gia, sanPham.gia_tien))</h4>
                            }
                            else
                            {
                                <h4 class="font-weight-bold">@String.Format(currency, "{0:c0}", sanPham.gia_tien)</h4>
                            }
                        </div>
                    </div>
                </div>
             }
        </div>
    </div>
</section>
