        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Nổi bật</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter" id="MixItUp866079">
            @foreach (san_pham sanPham in sanPhamNoiBat)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix @sanPham.loai_sp.ten">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/Assest/img/product/@sanPham.hinh_anh">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="@Url.Action("Detail", "Product")">@sanPham.ten</a></h6>
                            <h5>@sanPham.gia_tien</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
